        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="введі тьзначення для х&#xD;&#xA;" HorizontalAlignment="Left" Margin="21,17,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="введі тьзначення для z&#xA;" HorizontalAlignment="Left" Margin="21,78,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="введі тьзначення для y&#xA;" HorizontalAlignment="Left" Margin="21,49,0,0" VerticalAlignment="Top" Height="27"/>
    </Grid>
</Window>
